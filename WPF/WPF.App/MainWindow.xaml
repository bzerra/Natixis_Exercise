<Window x:Class="WPF.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Rental" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="White">
            <MenuItem Header="Customers" Click="Button_Click_Customer"/>
            <MenuItem Header="Movies" Click="Button_Click_Movies"/>
            <MenuItem Header="Rentals" Click="Button_Click_Rentals"/>
        </Menu>

        <Grid Margin="15">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" x:Name="CustomerArea" Visibility="Hidden">
                <TextBlock Text="Customers"
                           FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

                <ListView x:Name="CustomerList" Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Margin="20 0 0 0"
                        x:Name="CustomCreate"
                        Visibility="Hidden">
                <TextBlock Text="Create Customer"
                           FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

                <TextBlock Text="Name:"/>
                <TextBox x:Name="TxtCustomerName" Margin="0 5 0 10"/>

                <Button Content="Create" Width="150"
                        Click="BtnCadastrarCustomer_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="0" x:Name="MovieArea" Visibility="Hidden">
                <TextBlock Text="Movies"
                           FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

                <ListView x:Name="MovieList" Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="Price" Width="80" DisplayMemberBinding="{Binding PriceRental}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20 0 0 0"
                        x:Name="MovieCreate" Visibility="Hidden">
                <TextBlock Text="Create Movie"
                           FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

                <TextBlock Text="Title:"/>
                <TextBox x:Name="TxtMovieTitle" Margin="0 5 0 10"/>

                <TextBlock Text="Price:"/>
                <TextBox x:Name="TxtMoviePrice" Margin="0 5 0 10"/>

                <Button Content="Create Movie" Width="150"
                        Click="BtnCadastrarMovie_Click"/>
            </StackPanel>
         
            <StackPanel Grid.Column="0" x:Name="RentalArea" Visibility="Visible">
                <TextBlock Text="Rentals"
                           FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

                <ListView x:Name="RentalList" Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Days" Width="100" DisplayMemberBinding="{Binding DaysRented}" />
                            <GridViewColumn Header="Payment" Width="120" DisplayMemberBinding="{Binding paymentMethod}" />
                            <GridViewColumn Header="Customer" Width="150" DisplayMemberBinding="{Binding Customer.Name}" />
                            <GridViewColumn Header="Movie" Width="150" DisplayMemberBinding="{Binding Movie.Title}" />
                            <GridViewColumn Header="Price" Width="80" DisplayMemberBinding="{Binding Movie.PriceRental}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20 0 0 0"
                        x:Name="RenatalCreate">
                <TextBlock Text="Create Rental"
                           FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

                <TextBlock Text="Customer:"/>
                <ComboBox x:Name="CbCustomer"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0 5 0 10"/>

                <TextBlock Text="Filme:"/>
                <ComboBox x:Name="CbMovie"
                          DisplayMemberPath="Title"
                          SelectedValuePath="Id"
                          Margin="0 5 0 10"/>

                <TextBlock Text="Type of Payment:"/>
                <ComboBox x:Name="CbPaymentType" Margin="0 5 0 10">
                    <ComboBoxItem Content="MbWay" Tag="0"/>
                    <ComboBoxItem Content="PayPal" Tag="1"/>
                </ComboBox>

                <TextBlock Text="Days of Rental:"/>
                <TextBox x:Name="TxtRentalDays" Width="80" Margin="0 5 0 10"/>

                <Button Content="Create Rental"
                        Width="150" Click="BtnCadastrarRental_Click"/>
            </StackPanel>

        </Grid>

    </DockPanel>
</Window>
